{
  "name": "heroes",
  "description": "Official repo of https://hero35.com",
  "repository": "https://github.com/mavropalias/heroes.git",
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "@zeit/next-css": "^1.0.1",
    "algoliasearch": "^3.35.0",
    "firebase": "^7.0.0",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.2.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.7",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-firebaseui": "^4.0.0",
    "react-instantsearch": "^5.7.0",
    "react-instantsearch-dom": "^5.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@firebase/app-types": "^0.4.4",
    "@types/algoliasearch": "^3.34.2",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.9",
    "@types/react": "^16.9.4",
    "@types/react-dom": "^16.9.1",
    "cpx": "^1.5.0",
    "firebase-tools": "^7.4.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "dev": "source .env && npm run clean && next \"src/app\"",
    "preserve": "npm run clean && npm run build-public && npm run build-funcs && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "NODE_ENV=production node_modules/.bin/firebase serve",
    "deploy": "node_modules/.bin/firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-public": "cpx \"src/app/static/**/*.*\" \"dist/public/static\" -C",
    "build-app": "next build \"src/app\"",
    "build-funcs": "./node_modules/.bin/tsc --project src/functions",
    "copy-deps": "cpx \"*{package.json,package-lock.json}\" \"dist/functions\"",
    "install-deps": "cd \"dist/functions\" && npm ci"
  }
}
